<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Books</title>
        <link rel="stylesheet" type="text/css" href="style.css" />
    </head>

    <body>
        <table>
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Book Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < books.length; i++) { %>
                    <tr>
                        <td><%= books[i].book_id %></td>
                        <td><%= books[i].title %></td>
                        <td><%= books[i].status %></td>
                        <td><%= books[i].author %></td>
                        <td>
                                <form action="/user/request" method="POST">
                                    <button type="submit" name="book_id" value="<%= books[i].book_id %>">
                                        Request
                                    </button>
                                </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
